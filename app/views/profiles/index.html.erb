<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Student</th>
      <th>Dob</th>
      <th>Class</th>
      <th>Gender</th>
      <th>Nationality</th>
      <th>Religion</th>
      <th>Father name</th>
      <th>Father occupation</th>
      <th>Father designation</th>
      <th>Email</th>
      <th>Income</th>
      <th>Phone number</th>
      <th>Mother name</th>
      <th>Mother occupation</th>
      <th>Telephone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user %></td>
        <td><%= profile.student %></td>
        <td><%= profile.dob %></td>
        <td><%= profile.class %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.nationality %></td>
        <td><%= profile.religion %></td>
        <td><%= profile.father_name %></td>
        <td><%= profile.father_occupation %></td>
        <td><%= profile.father_designation %></td>
        <td><%= profile.email %></td>
        <td><%= profile.income %></td>
        <td><%= profile.phone_number %></td>
        <td><%= profile.mother_name %></td>
        <td><%= profile.mother_occupation %></td>
        <td><%= profile.telephone %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

